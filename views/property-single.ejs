<script>
    function submitForm() {
    // Get form data
    const name = document.getElementById('name').value;
    const phone = document.getElementById('phone').value;
    const email = document.getElementById('email').value;
    const date = document.getElementById('date').value;
    const notes = document.getElementById('notes').value;
    const agentId = document.getElementById('agentId').textContent;


    const homeId = document.getElementById('homeId').textContent;
    
    // Create form data object
    const formData = {
        name: name,
        phone: phone,
        email: email,
        date: date,
        notes: notes,
        agentId: agentId,
        homeId: homeId
    };

    // Make API request to post form data
    fetch('/appointments/new', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(formData)
    })
    .then(response => {
        if (response.ok) {
            // Display success message
            alert('Data saved successfully!');
            // You can also redirect to another page or perform any other action here
        } else {
            // Display error message
            alert('Failed to save data. Please try again.');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        // Display error message
        alert('An error occurred. Please try again later.');
    });
}

</script>  <!-- Template Main JS File -->
